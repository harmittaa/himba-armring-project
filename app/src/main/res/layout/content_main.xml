<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.himba.himbaproject.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="15"
    >

    <!--    <org.opencv.android.JavaCameraView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/openCvId"
            />-->

    <TextView
        android:text="Image to compare with"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/takeComparisonImageButton"
        android:text="Change reference image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:src="@drawable/himba2"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/mRefImg"
        android:contentDescription="refImage" />

    <TextView
        android:text="Image to compare"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/userImage"
        android:contentDescription="@string/chosen_image" />

    <Button
        android:id="@+id/takePhotoButton"
        android:text="@string/take_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/getDescriptors"
        android:text="Compare images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>



</LinearLayout>
